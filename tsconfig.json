{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2016",                        /* Control what method is used to detect module-format JS files. */

    /* Modules */
    "module": "commonjs",              /* Allow 'import x from y' when a module doesn't have a default export. */
    "esModuleInterop": true,                           /* Disable resolving symlinks to their realpath. This correlates to the same flag in node. */
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",            /* Ensure that casing is correct in imports. */
    "rootDir": "./src",

    /* Type Checking */
    "strict": true,                    /* Skip type checking .d.ts files that are included with TypeScript. */
    "skipLibCheck": true                                 /* Skip type checking all .d.ts files. */
  },
  "include": [
    "src",
    "src/app.ts"
, "prisma/generated/prisma", "prisma/generated"  ]
}