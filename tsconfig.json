{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2016",                        /* Control what method is used to detect module-format JS files. */

    /* Modules */
    "module": "commonjs",              /* Allow 'import x from y' when a module doesn't have a default export. */
    "esModuleInterop": true,                           /* Disable resolving symlinks to their realpath. This correlates to the same flag in node. */
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",            /* Ensure that casing is correct in imports. */
    "rootDir": "./src",

    /* Type Checking */
    "strict": true,                    /* Skip type checking .d.ts files that are included with TypeScript. */
    "skipLibCheck": true                                 /* Skip type checking all .d.ts files. */
  },
  "include": [
    "src", // Includes all files under the src directory
    // "src/app.ts" // This is redundant if "src" is included
    "prisma/generated/prisma",
    "prisma/generated"
  ],
  "exclude": [
    "node_modules", // Standard exclusion
    "dist",         // Exclude the output directory
    "src/routes/reserve/add.ts", // Exclude the missing file
    "src/routes/reserve/all.ts"  // Exclude the other missing file
  ]
}